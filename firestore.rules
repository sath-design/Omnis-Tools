rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Ad configuration
    match /config/ads {
      allow read, write: if request.auth != null;
    }
    
    // Default: Authenticated users can access anything for now (Internal Admin Portal)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
